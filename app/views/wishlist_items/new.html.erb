<h2>Add Item to Wishlist</h2>

<%= form_with model: [@client, @wishlist_item], local: true do |form| %>
  <div class="form-group">
    <%= form.label :item_name, "Item Name" %>
    <%= form.text_field :item_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :item_reference, "Item Reference" %>
    <%= form.text_field :item_reference, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :size, "Size" %>
    <%= form.text_field :size, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :color, "Color" %>
    <%= form.text_field :color, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :note, "Note" %>
    <%= form.text_area :note, class: "form-control" %>
  </div>

  <%= form.submit "Add to Wishlist", class: "btn btn-primary" %>
<% end %>
