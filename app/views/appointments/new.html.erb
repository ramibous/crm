<!-- app/views/appointments/new.html.erb -->
<h2>New Appointment</h2>
<%= form_with model: [@client, @appointment], local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Appointment Title" %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :scheduled_at, "Appointment Date and Time" %>
    <%= form.datetime_select :scheduled_at, class: 'form-control', required: true %>
  </div>

  <%= form.submit "Save", class: 'btn btn-primary mt-2' %>
<% end %>
