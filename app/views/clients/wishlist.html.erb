<div class="container mt-4">
  <h2>Wishlist Items</h2>

  <div class="list-group">
    <% @wishlist_items.each do |item| %>
      <div class="list-group-item">
        <h5>Client: <%= item.client.first_name %> <%= item.client.last_name %></h5>
        <p>Item: <%= item.item_name %></p>
        <p>Reference: <%= item.item_reference %></p>
        <p>Size: <%= item.size %></p>
        <p>Color: <%= item.color %></p>
        <p>Note: <%= item.note %></p>
        <p>Date Added: <%= item.created_at.strftime("%d %b %Y") %></p>

        <!-- Edit and Delete Links -->
        <div class="mt-2">
          <%= link_to 'Edit', edit_client_wishlist_item_path(item.client, item), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', client_wishlist_item_path(item.client, item), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
