<div class="container mt-4" style="background-color: #E5ECF6; padding: 20px; border-radius: 10px;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">La Canadienne 273 Av. Laurier O, Montréal store 002</h2>
  </div>

  <h3>Search existing Customer Card</h3>

  <%= form_with url: search_clients_path, method: :get, local: true do |form| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :first_name, "Name / اسم", class: "form-label" %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= form.label :first_name_local, "Name (local) / اسم (المحلي)", class: "form-label" %>
        <%= form.text_field :first_name_local, class: 'form-control' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :last_name, "Surname / لقب العائلة", class: "form-label" %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= form.label :last_name_local, "Surname (local) / اللقب (المحلي)", class: "form-label" %>
        <%= form.text_field :last_name_local, class: 'form-control' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :company, "Company / شركة", class: "form-label" %>
        <%= form.text_field :company, class: 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= form.label :location, "Location / موقعك", class: "form-label" %>
        <%= form.text_field :location, class: 'form-control' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :email, "E-mail / البريد الإلكتروني", class: "form-label" %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= form.label :passport, "Passport / رقم جواز السفر", class: "form-label" %>
        <%= form.text_field :passport, class: 'form-control' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :mobile, "Mobile / التليفون المحمول", class: "form-label" %>
        <%= form.text_field :mobile, class: 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= form.label :customer_code, "Customer code / كود العملاء", class: "form-label" %>
        <%= form.text_field :customer_code, class: 'form-control' %>
      </div>
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-between mt-4">
      <%= form.submit 'RESET', class: 'btn-custom' %>
      <%= form.submit 'SEARCH', class: 'btn-custom' %>
    </div>
  <% end %>
</div>


<style>
  /* Custom Button Styling for each button */
/* Custom Button Styling for consistency */
.btn-custom {
  background-color: #4a4a4a; /* Dark grey background for consistency */
  color: white;
  text-decoration: none; /* Remove underline */
  border: none;
  padding: 10px 20px; /* Adjust padding for mobile */
  font-size: 1rem; /* Moderate font size */
  font-weight: 600;
  border-radius: 6px; /* Rounded corners */
  cursor: pointer;
  text-transform: uppercase;
  transition: background-color 0.3s ease;
  max-width: 160px; /* Max width for mobile */
  width: 100%; /* Full width for mobile */
  display: block; /* Ensure full width on mobile */
}

/* Hover effect for buttons */
.btn-custom:hover {
  background-color: #333; /* Darken the button on hover */
}

/* Adjust form layout for mobile responsiveness */
.container {
  padding: 15px;
  max-width: 600px; /* Set max width for better readability */
  margin: 0 auto;
}

.mb-3 {
  margin-bottom: 15px !important; /* Adjust margin between form elements */
}

</style>